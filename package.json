{
	"name": "@zextras/carbonio-design-system",
	"version": "0.0.0-semantically-released",
	"description": "An awesome UI for Zextras Projects.",
	"main": "dist/zapp-ui.bundle.js",
	"types": "dist/zapp-ui.bundle.d.ts",
	"scripts": {
		"start": "npm run styleguide",
		"release": "standard-version",
		"lint": "eslint --ext .js,.jsx,.ts,.tsx --resolve-plugins-relative-to node_modules/@zextras/carbonio-ui-configs src",
		"lint:icons": "eslint --ext .ts,.tsx --resolve-plugins-relative-to node_modules/@zextras/carbonio-ui-configs src/icons --fix",
		"styleguide": "styleguidist server",
		"test": "(is-ci && jest --runInBand) || jest --maxWorkers=50%",
		"icons:build": "tsc ./src/icons/tsTemplate.ts && npx @svgr/cli svg && npm run lint:icons",
		"build": "npm run build:cjs && npm run build:types",
		"build:cjs": "npx rollup -c rollup.config.mjs",
		"build:types": "tsc -p tsconfig.types.json && npx @microsoft/api-extractor run --local --verbose",
		"clean": "rm -rf dist/* types/*",
		"prepack": "npm run clean && npm run build",
		"packTo": "npm pack --pack-destination $PKG_PATH && cd $PKG_PATH && npm i zextras-carbonio-design-system-$npm_package_version.tgz",
		"deploy": "npm pack && rm -rf $PKG_PATH/node_modules/@zextras/carbonio-design-system/* && tar -xf zextras-carbonio-design-system-$npm_package_version.tgz -C $PKG_PATH/node_modules/@zextras/carbonio-design-system/ --strip-components 1",
		"prepare": "is-ci || husky",
		"type-check": "tsc --noEmit",
		"postinstall": "echo '\\e[43mForcing the removal of @types/glob. This is a workaround caused by npm not honoring overrides field. To check for updates on this, see https://github.com/npm/cli/issues/5850\\e[0m'; (rm -r node_modules/@types/glob || true)",
		"storybook": "storybook dev -p 6006",
		"build:docs": "styleguidist build && storybook build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zextras/carbonio-design-system.git"
	},
	"keywords": [
		"Zextras",
		"Carbonio",
		"ui",
		"DesignSystem"
	],
	"author": "Zextras Frontend Tribe <https://www.zextras.com/carbonio/>",
	"license": "AGPL-3.0-only",
	"homepage": "https://github.com/Zextras/carbonio-design-system",
	"sideEffects": false,
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@babel/plugin-transform-runtime": "^7.24.7",
		"@babel/preset-env": "^7.25.3",
		"@babel/preset-react": "^7.24.7",
		"@babel/preset-typescript": "^7.24.7",
		"@commitlint/cli": "^19.4.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@faker-js/faker": "^8.4.1",
		"@microsoft/api-extractor": "^7.47.5",
		"@rollup/plugin-babel": "^6.0.4",
		"@rollup/plugin-commonjs": "^25.0.8",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-typescript": "^11.1.6",
		"@rollup/plugin-url": "^8.0.2",
		"@storybook/addon-designs": "^8.0.3",
		"@storybook/addon-essentials": "^8.2.9",
		"@storybook/addon-interactions": "^8.2.9",
		"@storybook/addon-webpack5-compiler-babel": "^3.0.3",
		"@storybook/blocks": "^8.2.9",
		"@storybook/react-webpack5": "^8.2.9",
		"@storybook/test": "^8.2.9",
		"@svgr/cli": "^8.1.0",
		"@testing-library/dom": "^8.20.1",
		"@testing-library/jest-dom": "^6.4.8",
		"@testing-library/react": "^12.1.5",
		"@testing-library/react-hooks": "^8.0.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/jest": "^29.5.12",
		"@types/lodash": "^4.17.7",
		"@types/react": "^17.0.80",
		"@types/react-datepicker": "^4.19.6",
		"@zextras/carbonio-ui-configs": "^1.0.2",
		"babel-jest": "^29.7.0",
		"babel-loader": "^9.1.3",
		"babel-plugin-styled-components": "^2.1.4",
		"conventional-changelog-conventionalcommits": "^8.0.0",
		"create-index": "2.6.0",
		"del": "^7.1.0",
		"eslint-plugin-notice": "^1.0.0",
		"eslint-plugin-storybook": "^0.8.0",
		"husky": "^9.1.4",
		"is-ci": "^3.0.1",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jest-fail-on-console": "^3.3.0",
		"jest-junit": "^16.0.0",
		"jest-styled-components": "^7.2.0",
		"jsdom": "^24.1.1",
		"lodash": "^4.17.21",
		"process": "0.11.10",
		"react": "^17.0.2",
		"react-docgen-typescript": "^2.2.2",
		"react-dom": "^17.0.2",
		"react-styleguidist": "13.0.0",
		"react-test-renderer": "^17.0.2",
		"rollup": "^3.29.4",
		"semantic-release": "^24.0.0",
		"standard-version": "^9.5.0",
		"storybook": "^8.2.9",
		"ts-node": "^10 >=10.9.2",
		"typescript": "^5.5.4",
		"webpack": "^5.93.0"
	},
	"browserslist": [
		">1%",
		"last 3 version",
		"Firefox ESR",
		"not dead"
	],
	"peerDependencies": {
		"lodash": "^4.17.21",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"styled-components": "^6.1.13"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.6.10",
		"darkreader": "^4.9.87",
		"polished": "^4.3.1",
		"react-datepicker": "^4.25.0"
	},
	"overrides": {
		"react-styleguidist": {
			"clean-webpack-plugin": {
				"del": ">=5.0.0"
			}
		}
	}
}
